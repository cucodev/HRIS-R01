    <script type="text/javascript">
        $(document).ready(function () {
            var vStatus = false;
            $('#dataForm').jqxTabs({ theme: th, width: '100%', height: 550 });

            $("#NIP").jqxInput({ disabled: true, theme:th, width: '100%',  height: '35px' })
            $("#Name").jqxInput({ disabled: vStatus, theme:th, width: '100%', height: '35px' })
            $("#NickName").jqxInput({ disabled: vStatus, theme:th, width: '100%', height: '35px' })
            
            $("#Birthdate").jqxDateTimeInput({ disabled: vStatus, theme: th, height: '35px' });
            $("#Birthplace").jqxDateTimeInput({ disabled: vStatus, theme: th, width: '100%', height: '35px' });
            $("#Gender").jqxListBox({ disabled: vStatus, source: Gender, theme: th,  width: '100%', height: '50px'});
            
            $("#Nationality").jqxComboBox({ disabled: vStatus, theme: th, source: countries,  height: '25px' });
            $("#Religion").jqxDropDownList({ disabled: vStatus, theme: th, source: religion, width: '100%', height: '25px', autoDropDownHeight: true });
            
            $("#empStatus").jqxDropDownList({ disabled: vStatus, theme: th, width: '100%', height: '25px', autoDropDownHeight: true });
            

            
            $("#SubmitButton").jqxButton({ disabled: vStatus, theme: 'orange', width: 120, height: 40 });
            $('#address').jqxTextArea({ disabled: vStatus, placeHolder: "Address", width: '100%', height: 80 });
            $("#province").jqxDropDownList({ disabled: vStatus, width: '100%', height: '25px', displayMember: "uidname", valueMember: "id" });
            $("#district").jqxDropDownList({ width: '100%', height: '25px', disabled: true, displayMember: "uidname", valueMember: "id" });
            $("#districts").jqxDropDownList({ width: '100%', height: '25px', disabled: true, displayMember: "uidname", valueMember: "id" });
            $("#subDistricts").jqxDropDownList({ width: '100%', height: '25px', disabled: true, displayMember: "uidname", valueMember: "id" });
            $("#education").jqxDropDownList({ disabled: vStatus, width: '100%', height: '25px', disabled: false, displayMember: "uidname", valueMember: "id" });
            $("#department").jqxDropDownList({ disabled: vStatus, width: '100%', height: '25px' });
            $("#division").jqxDropDownList({ disabled: vStatus, width: '100%', height: '25px' });
            $("#position").jqxDropDownList({ disabled: vStatus, width: '100%', height: '25px' });
            //$("#SubmitButton").jqxButton({ disabled: vStatus, theme: 'orange', width: 90, height: 30 });
            //$("#Cancel").jqxButton({ disabled: vStatus, theme: 'orange', width: 90, height: 30 });

        });

    </script>



